<div class="modal fade" id="addPasswordModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Password</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" style="padding-bottom:4px;">
          <form action="/addPassword" method="POST">
            <div class="modal-body">
              <div class="form-group">
                <label for="website">Website/URL</label>
                <input name="website" type="text" class="form-control" id="website" aria-describedby="" placeholder="Website" required>
              </div>
              <div class="form-group">
                <label for="username">User Name</label>
                <input name="username" type="text" class="form-control" id="username" placeholder="User Name" required>
              </div>
              <div class="form-group">
                <label for="password1">Password</label>
                <input name="password" type="text" class="form-control" id="password1" placeholder="Password" required>
              </div>
            </div>
            <div class="modal-footer" >
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-success">Add Password</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>